<Window x:Class="cursach.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cursach"
        mc:Ignorable="d"
        Title="TestWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel x:Name="MainPanel" Orientation="Vertical" >
                <StackPanel x:Name="QuestionsPanel"/>
                <StackPanel x:Name="Confirm" Orientation="Horizontal">
                    <Label Content="Имя" Margin="5"/>
                    <TextBox Width="150" Margin="5"/>
                    <Label Content="Фамилия" Margin="5"/>
                    <TextBox Width="150" Margin="5"/>
                    <Label Content="Группа" Margin="5"/>
                    <TextBox Width="100" Margin="5"/>
                    <Button Content="Сonfirm" Width="150" Margin="15,5,5,5"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
